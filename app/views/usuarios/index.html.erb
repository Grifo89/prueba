<p id="notice"><%= notice %></p>
<nav style="display: flex">
  <h1>Usuarios</h1>
  <%= link_to 'New Usuario', new_usuario_path, remote: true, class: "btn btn-primary new-link" %>
</nav>

<div class="table-container row " style="overflow-x:auto;">
  <table id="users">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Correo</th>
        <th>Telefono</th>
        <th>Sexo</th>
        <th>Tipo de usuario</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <%= render @usuarios %>
    </tbody>
  </table>
</div>

<br>

<div id="new-user"></div>
